<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_simple_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简单工厂模式（Simple Factory Pattern）"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="工厂模式（Factory Pattern）"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_abstract_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="抽象工厂模式（Abstract Factory Pattern）"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_singleton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单例模式（Singleton Pattern）"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_builder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="建造者模式（Builder Pattern）"
        android:textAllCaps="false" />

</LinearLayout>